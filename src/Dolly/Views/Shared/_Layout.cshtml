<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dolly @(ViewData.ContainsKey("Title") ? $" - {ViewData["Title"]}" : "")</title>

        <environment names="Development">
            <link rel="stylesheet" asp-href-include="~/css/**/*.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" asp-href-include="~/css/**/*.min.css" asp-append-version="true"/>
        </environment>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" async/>
    </head>
<body>
@{ await Html.RenderPartialAsync("_Header"); }
<div class="container">
    @RenderBody()
</div>
@{await Html.RenderPartialAsync("_Footer"); }

<environment names="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery">
            
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }
</body>
</html>
