@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="page-header">
    <h2 class="inline-header">@ViewData["Title"]</h2>
</div>

<form asp-controller="Account" asp-action="Register" method="post" class="form col-md-8 col-offset-md-2 col-lg-6 col-offset-lg-3" role="form">
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="col-md-4">
        <label asp-for="Email"></label>
    </div>
    <div class="col-md-8">
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Password">Пароль</label>
    </div>
    <div class="col-md-8">
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="ConfirmPassword">Подтверждение</label>
    </div>
    <div class="col-md-8">
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="col-offset-md-4">
        <input type="submit" class="btn" value="Регистрация" />
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
