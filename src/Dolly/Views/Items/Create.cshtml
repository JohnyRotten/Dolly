@model Dolly.Models.Item

@{
    ViewData["Title"] = "Create";
}

<div class="page-header">
    <h2 class="inline-header">Создать товар</h2>
    <div class="right-align">
        <a asp-action="Index" class="btn">Назад</a>
    </div>
</div>

<form asp-action="Create" class="form">
    @{ await Html.RenderPartialAsync("_Form", Model);}
    <div class="col-offset-md-2 col-offset-lg-3 col-md-8 col-lg-6">
        <div class="col-offset-md-4">
            <input type="submit" class="btn" value="Добавить" />
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
