@model Category

<div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
<div class="col-md-4">
    <label asp-for="ParentId" class="col-md-4">Родитель</label>
</div>
<div class="col-md-8">
    <select asp-for="ParentId" asp-items="ViewBag.Categories" class="form-control">
        <option selected="selected">Выберите категорию</option>
    </select>
    <span asp-validation-for="CategoryId" class="text-danger" />
</div>
<div class="col-md-4">
    <label asp-for="Title" class="col-md-4">Заголовок</label>
</div>
<div class="col-md-8">
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger" />
</div>
